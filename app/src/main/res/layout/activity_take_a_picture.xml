<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.aaa.take_a_picture">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/viewGroup"
        android:gravity="center_horizontal"
        android:layout_below="@+id/pager"
        android:layout_toStartOf="@+id/Start_picture_bt"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"></LinearLayout>

    <Button
        android:id="@+id/Start_picture_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始拍照"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/ok_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go back"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/Start_picture_bt" />
    <Button
        android:id="@+id/albm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fromalbm"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ok_bt" />

</RelativeLayout>
